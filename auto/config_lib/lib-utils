#!/bin/sh

compact_conf() {
  for f in "$@"; do
    sed -i 's/#.*$//' "$f"
    sed -i '/^\s*$/d' "$f"
    sed -i 's/^\s\+\|\s\+$//g' "$f"
  done
}

join_in_string() {
  local input="$1"
  local delim="$2"
  local prefix="$3"
  local suffix="$4"
  local result
  for s in $input; do
    if [ -n "$s" ]; then
      result="${result:+$result$delim}$prefix$s$suffix"
    fi
  done
  echo "$result"
}

contains() {
  for s in $1; do
    if [ "$s" = "$2" ]; then
      return 0
    fi
  done
  return 1
}
